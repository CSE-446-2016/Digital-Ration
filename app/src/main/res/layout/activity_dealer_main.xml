<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DealerMainActivity">

    <ImageView
        android:id="@+id/dealer_main_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/card2"
        android:layout_centerHorizontal="true"
        android:layout_margin="100dp"/>

    <Button
        android:id="@+id/dealer_main_punchButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/rounded_corners"
        android:text="Punch Your Card"
        android:textColor="@color/shada"
        android:textSize="20dp"
        android:textAllCaps="false"/>

    <ImageView
        android:id="@+id/dealer_main_image1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/stat2"
        android:layout_below="@+id/dealer_main_punchButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/dealer_main_statButton"
        android:layout_below="@id/dealer_main_image1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/rounded_corners"
        android:text="Statistics"
        android:textColor="@color/shada"
        android:textSize="20dp"
        android:textAllCaps="false"/>

</RelativeLayout>
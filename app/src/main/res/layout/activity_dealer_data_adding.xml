<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DealerDataAddingActivity">

    <Button
        android:id="@+id/dealer_data_adding_button"
        android:layout_width="262dp"
        android:layout_height="50dp"
        android:layout_below="@+id/user_login_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corners"
        android:text="Add Data"
        android:textColor="@color/shada"
        android:textSize="20dp"
        android:textAllCaps="false"/>

    <ImageView
        android:id="@+id/dealer_data_adding_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/list"
        android:layout_below="@+id/dealer_data_adding_button"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/dealer_data_insert_button"
        android:layout_width="262dp"
        android:layout_height="50dp"
        android:layout_below="@+id/dealer_data_adding_image"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corners"
        android:text="Insert"
        android:textColor="@color/shada"
        android:textSize="20dp"
        android:textAllCaps="false"/>

</RelativeLayout>